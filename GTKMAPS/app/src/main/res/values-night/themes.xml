<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GTKMAPS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F2F2F2</item>
        <item name="colorPrimaryVariant">#F2F2F2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1A2C53</item>
        <item name="colorSecondaryVariant">#F2F2F2</item>
        <item name="colorOnSecondary">#F2F2F2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#3C3F41</item>
        <item name="background">@color/transparent</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/close_slide_down</item>
    </style>


    <color name="DialogLayoutBackground"> @color/night_dialog </color>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Set the background of the dialog window to transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogBackground">
        <item name="background">@color/night_dialog</item>
    </style>

    <style name="spinner_background" parent="Widget.AppCompat.Spinner">
        <item name="dropDownBackgroundTint">@color/night</item>
    </style>

    <style name="title_standard">
        <item name="android:textColor">#6595C8</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="toggle_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toggle_button_icon_color</item>
    </style>
    <style name="text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="delete_text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="auto_complete_text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#1A2C53</item>
        <item name="android:textColorHint">#4C7DA5</item>
        <item name="backgroundTint">#1A2C53</item>
    </style>
    <style name="check_box_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="more_category">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="Switch">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="android:thumbTint">#4C7DA5</item>
        <item name="android:trackTint">#B0BEC5</item>
    </style>

    <color name="icon_color">
        #1A2C53
    </color>
    <color name="edit_text_hint">
        #4C7DA5
    </color>
    <color name="edit_text_color">
        #1A2C53
    </color>
    <color name="menu_icon_color">
        #4C7DA5
    </color>
    <color name="transport_icon_color">
        #4C7DA5
    </color>
    <color name="search_text_field">
        #4C7DA5
    </color>
    <color name="search_text_field_background">
        #B0BEC5
    </color>
    <color name="toggle_button">
        #F2F2F2
    </color>
    <color name="toggle_button_on">
        #000000
    </color>
    <color name="toggle_button_off">
        #F2F2F2
    </color>

    <color name="toggle_button_on_background">#1A2C53</color> <!-- Dark Gray Background -->
    <color name="toggle_button_on_outline">#4C7DA5 </color> <!-- Teal Outline -->

    <!-- Colors for the off state -->
    <color name="toggle_button_off_background">#B0BEC5</color> <!-- Light Gray Background B0BEC5 -->
    <color name="toggle_button_off_outline">#4C7DA5</color> <!-- Cool Gray Outline -->

    <color name="start_icon_color">
        #404040
    </color>

    <color name="handle_color">
        #333333
    </color>
    <color name="handle_arrow_color">
        #4C7DA5
    </color>
    <color name="item_arrow_color">
        #4C7DA5
    </color>
    <color name="layout_color">
        #000000
    </color>
    <color name="item_layout_color">
        #000000
    </color>
    <color name="category_layout_color">#5A5A5A</color>
    <color name="category_item_color">#686767</color>
    <color name="divider">
        #1A2C53
    </color>
    <color name="dialog_button">
        #4C7DA5
    </color>
    <color name="details_color">#1A2C53</color>

</resources>