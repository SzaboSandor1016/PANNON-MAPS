<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GTKMAPS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3C558E</item>
        <item name="colorPrimaryVariant">#3C558E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1A2C53</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/night</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_open_layout</item>
        <item name="android:windowExitAnimation">@anim/close_slide_down</item>
    </style>


    <color name="DialogLayoutBackground">@color/white</color>

    <style name="Theme.GTKMAPS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Set the background of the dialog window to transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogBackground">
        <item name="background">@color/white</item>
    </style>

    <style name="button_standard">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">#00BCD4</item>
        <item name="cornerRadius">20dp</item>
        <!--<item name="cornerRadius">10dp</item>-->
    </style>

    <style name="edit_text_standard">
        <item name="backgroundTint">#25E157</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cabin</item>
    </style>

    <style name="title_standard">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toggle_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toggle_button_icon_color</item>
    </style>

    <style name="text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="delete_text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auto_complete_text_view_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="backgroundTint">#1A2C53</item>
    </style>

    <style name="style_auto_complete_text_view_dropdown_item">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="check_box_style">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="more_category">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Switch">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textColor">#404040</item>
        <item name="android:thumbTint">#1A2C53</item>
        <item name="android:trackTint">#9E9E9E</item>
    </style>

    <color name="icon_color">
        #1A2C53
    </color>
    <color name="edit_text_hint">
        #9E9E9E
    </color>
    <color name="edit_text_color">
        #404040
    </color>
    <color name="menu_icon_color">
        #404040
    </color>
    <color name="transport_icon_color">
        #404040
    </color>
    <color name="search_text_field">
        #9E9E9E
    </color>
    <color name="search_text_field_background">#CAC4D0</color>
    <color name="toggle_button">
        #1A2C53
    </color>
    <color name="toggle_button_on">
        #F2F2F2
    </color>
    <color name="toggle_button_off">#DADADA</color>

    <color name="toggle_button_on_background">#1A2C53</color> <!-- Dark Gray Background -->
    <color name="toggle_button_on_outline">#9E9E9E</color> <!-- Teal Outline -->

    <!-- Colors for the off state -->
    <color name="toggle_button_off_background">#E0E0E0</color> <!-- Light Gray Background -->
    <color name="toggle_button_off_outline">#9E9E9E</color> <!-- Cool Gray Outline -->

    <color name="start_icon_color">
        #404040
    </color>
    <color name="handle_color">
        #1A2C53
    </color>
    <color name="handle_arrow_color">
        #F2F2F2
    </color>
    <color name="item_arrow_color">
        #404040
    </color>
    <color name="layout_color">
        #F2F2F2
    </color>
    <color name="item_layout_color">
        #F7F2FA
    </color>
    <color name="category_layout_color">
        #9E9E9E
    </color>
    <color name="category_item_color">#F2F2F2</color>
    <color name="divider">
        #1A2C53
    </color>
    <color name="dialog_button">
        #404040
    </color>
    <color name="details_color">#E2E2E2</color>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxBackgroundColor">@color/chip_background_light</item>
        <item name="boxStrokeColor">#E8DEF8</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="material3_Chip" parent="Theme.GTKMAPS" />

    <style name="style_text_input_editText">
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">6dp</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="android:enabled">true</item>
    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:backgroundTint">@color/color_filter_button_active</item>
    </style>

    <style name="Theme.GTKMAPS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.GTKMAPS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>