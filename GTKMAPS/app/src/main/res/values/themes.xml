<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GTKMAPS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3C558E</item>
        <item name="colorPrimaryVariant">#3C558E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#25E157</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.GTKMAPS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="button_standard">
        <item name="android:layout_width">300dp</item>
        <item name= "android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginBottom"> 10dp</item>
        <item name="android:backgroundTint">#00BCD4</item>
        <item name="cornerRadius">20dp</item>
        <!--<item name="cornerRadius">10dp</item>-->
    </style>


    <style name="Theme.GTKMAPS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>