<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/layout_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:background="@color/layout_color"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/select_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/share_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_view_style"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/share_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_view_style"
                android:textSize="16sp"
                />

        </LinearLayout>
        <View
            android:id="@+id/show_share_details"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:background="@drawable/list_item_arrow"
            style="@style/toggle_button"/>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/share_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/layout_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/from_share_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="@drawable/details_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                style="@style/text_view_style"
                android:text="@string/from"/>
            <TextView
                android:id="@+id/share_start_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                style="@style/text_view_style"
                android:layout_weight="1"
                android:text="tesztt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_note_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="@drawable/details_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                style="@style/text_view_style"
                android:text="@string/note"/>
            <TextView
                android:id="@+id/share_note_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                style="@style/text_view_style"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:background="@drawable/details_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_view_style"
                    android:paddingHorizontal="6dp"
                    android:text="@string/distance"/>

                <TextView
                    android:id="@+id/share_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    style="@style/text_view_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:background="@drawable/details_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_view_style"
                    android:paddingHorizontal="6dp"
                    android:text="@string/transporte_form"/>

                <TextView
                    android:id="@+id/share_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    style="@style/text_view_style"/>

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            style="@style/text_view_style"
            android:text="@string/categories"/>
        <TextView
            android:id="@+id/share_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            style="@style/text_view_style"
            android:text="tesztt"
            android:background="@drawable/details_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="right">
            <TextView
                android:id="@+id/share_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                style="@style/text_view_style"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="tesztt"
                android:background="@drawable/details_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <!-- Modify Button -->
            <Button
                android:id="@+id/modify_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textColor="@color/dialog_button"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="10dp"
                android:padding="10dp"/>

            <!-- Delete Button -->
            <Button
                android:id="@+id/delete_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/dialog_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/divider"/>

    </LinearLayout>


</LinearLayout>