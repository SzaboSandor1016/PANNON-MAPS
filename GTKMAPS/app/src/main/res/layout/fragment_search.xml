<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="535dp"
    android:background="@color/layout_color"
    tools:context=".SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/search_field_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_text_field_style"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/search_autocomplete_text_field"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:dropDownWidth="wrap_content"
            android:hint="@string/search_place"
            android:imeOptions="actionDone"
            style="@style/auto_complete_text_view_style"
            android:inputType="text" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <ImageButton
            android:id="@+id/searchByPlaceBTN"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:background="@drawable/search"
            android:enabled="false" />

    </LinearLayout>

    <Switch
        android:id="@+id/searchByCurrentPositionSW"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        style="@style/Switch"
        android:text="@string/current_location"
        app:layout_constraintTop_toBottomOf="@+id/search_field_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/transport_text"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/searchByCurrentPositionSW"
        android:gravity="start"
        android:text="@string/transporte_form"
        tools:layout_editor_absoluteX="12dp" />

    <LinearLayout
        android:id="@+id/transport_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/transport_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/select_walk"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:background="@drawable/toggle_button_style_off"
            style="@style/toggle_button"
            android:src="@drawable/walk"
            android:layout_marginEnd="12dp"
            app:tint="@color/toggle_button_icon_color" />

        <ImageButton
            android:id="@+id/select_car"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:background="@drawable/toggle_button_style_off"
            style="@style/toggle_button"
            android:src="@drawable/car"
            app:tint="@color/toggle_button_icon_color" />

    </LinearLayout>


    <TextView
        android:id="@+id/distance_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/transport_select_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        style="@style/text_view_style"
        android:text="@string/distance"
        />

    <LinearLayout
        android:id="@+id/distance_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@+id/distance_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_15"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            android:gravity="top|center_horizontal"
            android:textSize="16sp"
            android:background="@drawable/toggle_button_style_off"
            style="@style/toggle_button"

            android:text="15" />

        <Button
            android:id="@+id/select_30"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:gravity="top|center_horizontal"
            android:textSize="16sp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/toggle_button_style_off"
            style="@style/toggle_button"
            android:text="30" />

        <Button
            android:id="@+id/select_45"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:gravity="top|center_horizontal"
            android:textSize="16sp"
            android:background="@drawable/toggle_button_style_off"
            style="@style/toggle_button"
            android:text="45" />

    </LinearLayout>


    <TextView
        android:id="@+id/categories_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/distance_select_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        style="@style/text_view_style"
        android:text="@string/categories"
        />

    <LinearLayout
        android:id="@+id/categories_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/categories_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/select_hotel_layout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/toggle_button_style_off"
            android:orientation="horizontal">

            <Button
                android:id="@+id/select_hotel"
                style="@style/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_style"
                android:fontFamily="@font/cabin"
                android:text="@string/hotel" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cafe"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:src="@drawable/bar"
                app:tint="@color/toggle_button_icon_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_accomodation_layout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/toggle_button_style_off"
            android:orientation="horizontal">

            <Button
                android:id="@+id/select_accomodation"
                style="@style/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_style"
                android:fontFamily="@font/cabin"
                android:text="@string/accommodation" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/camp_site"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/caravan_site"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/guest_house"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:src="@drawable/hotel"
                app:tint="@color/toggle_button_icon_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_museum_layout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/toggle_button_style_off"
            android:orientation="horizontal">

            <Button
                android:id="@+id/select_museum"
                style="@style/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_style"
                android:fontFamily="@font/cabin"
                android:text="@string/museum" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/palette"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:src="@drawable/museum"
                app:tint="@color/toggle_button_icon_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_nightclub_layout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:background="@drawable/toggle_button_style_off"
            android:orientation="horizontal">

            <Button
                android:id="@+id/select_nightclub"
                style="@style/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_style"
                android:fontFamily="@font/cabin"
                android:text="@string/nightclub" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/nightclub"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/casino"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cinema"
                app:tint="@color/toggle_button_icon_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:src="@drawable/theatre"
                app:tint="@color/toggle_button_icon_color"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/categories_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:translationY="300dp"
        android:gravity="start"> <!-- Kezdetben a képernyőn kívül -->

        <!-- Fogantyú (csík) -->
        <LinearLayout
            android:id="@+id/categories_handle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/handle_style" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="16dp"
                style="@style/more_category"
                android:text="@string/more_categories"/>

            <View
                android:id="@+id/categories_handle_arrow"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@drawable/handle_arrow"
                />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider"
            />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/other_categories_list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/category_layout_color"
                />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>