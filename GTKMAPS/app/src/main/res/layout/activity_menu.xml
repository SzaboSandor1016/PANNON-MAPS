<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/newlogo" />

        <!-- <ImageButton
            android:id="@+id/optionsBTN"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/dots"
            android:foregroundTint="#00BCD4" />-->
    </LinearLayout>

    <!--<Button
        android:id="@+id/QRB"
        style="@style/button_standard"
        android:layout_height="wrap_content"
        android:backgroundTint="#3C558E"
        android:gravity="center"
        android:onClick="scanQRCode"
        android:text="@string/scan"
        tools:ignore="VisualLintOverlap" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loadingGif"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/earth"
            android:visibility="visible" />
        <EditText
            android:id="@+id/placeET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#25E157"
            android:hint="@string/search_place"
            android:layout_weight="2"
            android:inputType="text" />
        <ImageButton
            android:id="@+id/searchByPlaceBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search"
            />
        <ImageButton
            android:id="@+id/savedBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/saved"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
        <Switch
            android:id="@+id/searchByCurrentPositionSW"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:text="@string/current_location"
            android:thumbTint="#4E6AAA"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/matchLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ListView
                android:id="@+id/matchLV"
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:divider="#6595C8"
                android:dividerHeight="2dp"
                android:layout_margin="20dp"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/detailedLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cityET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#25E157"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/city"
            android:inputType="text" />

        <EditText
            android:id="@+id/streetET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#25E157"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/street"
            android:inputType="text" />

        <EditText
            android:id="@+id/houseNumberET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#25E157"
            android:enabled="false"
            android:hint="@string/housenumber"
            android:inputType="number" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/detailedBTN"
                style="@style/button_standard"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3D568F"
                android:text="@string/detailed" />

            <Button
                android:id="@+id/categoriesBTN"
                style="@style/button_standard"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3D568F"
                android:text="@string/categories" />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transporte_form"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <RadioGroup
        android:id="@+id/formOfTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/walk"
            android:layout_marginLeft="10dp"
            />
        <RadioButton
            android:id="@+id/walk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/walk" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/car"
            />
        <RadioButton
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/car" />

        <!--<RadioButton
            android:id="@+id/public_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/public_transport"/>-->

    </RadioGroup>


    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3D568F" />


    </LinearLayout>
</LinearLayout>
