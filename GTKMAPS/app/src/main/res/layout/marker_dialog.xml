<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DialogLayoutBackground"
        android:orientation="vertical">

    <TextView
        android:id="@+id/markerNameMD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="24sp"
        android:text="teszt"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="20dp"
        app:dividerColor="#997CA2CA"/>

    <TextView
        android:id="@+id/markerCategoryMD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="teszt"/>

    <LinearLayout
        android:id="@+id/markerExtraDataMD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_margin="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/cuisineTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cuisine"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/markerCuisineMD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="teszt"
            />
        <TextView
            android:id="@+id/chargesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charge"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/markerChargeMD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="teszt"
            />
        <TextView
            android:id="@+id/openTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opening_hours"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/markerOpeningHoursMD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="teszt"
            />
    </LinearLayout>

        <!--<ImageButton
            android:id="@+id/markerExtraDataIB"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/drop_down"
            />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/removeMD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/delete"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:visibility="invisible"
            android:textColor="#2A3F75" />
        <Button
            android:id="@+id/addMD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/select"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:backgroundTint="#00FFFFFF"
            android:visibility="invisible"
            android:textColor="#2A3F75"
            />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/fade"/>

</LinearLayout>